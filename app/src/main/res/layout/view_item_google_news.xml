<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_medium_2"
    card_view:cardElevation="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_google_news_hero_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_news_placeholder" />

        <ImageView
            android:id="@+id/iv_google_news_publication_logo"
            android:layout_width="@dimen/google_news_logo_width"
            android:layout_height="@dimen/google_news_logo_height"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/img_publication_logo_placeholder"
            android:layout_below="@id/iv_google_news_hero_image"
            />

        <org.mmtextview.components.MMTextView
            android:id="@+id/tv_google_news_brief_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_google_news_publication_logo"

            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/dummy_news"
            android:textColor="@color/primary_text"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_google_news_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_publication_name"
            android:layout_below="@id/tv_google_news_brief_news"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:text="Jan 01 - 6:30AM"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_small"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>